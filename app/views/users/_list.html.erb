    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
          <tr>
            <% if current_user == user %>
            <% else %>
              <% if current_user.following?(user) %>
               <td><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:'btn btn-success' %></td>
              <% else %>
               <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:'btn btn-success' %></td>
              <% end %>
            <% end %>
          </tr>
        </tbody>

      </table>
      <div class="row">
        <%= link_to "", edit_user_path(user.id), class:'btn btn-outline-secondary btn-block fas fa-user-cog' %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:book, url:books_path, method: :post, local:true do |b| %>
        <h4>Title</h4>
        <%= b.text_field:title %>
        <h4>Opinion</h4>
        <%= b.text_area:body %>
        <%= b.submit "Create Book", class:'btn btn-success' %>
      <% end %>
    </div>
